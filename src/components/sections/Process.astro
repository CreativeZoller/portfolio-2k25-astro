---
const processSteps = [
    {
        icon: await import('../../../public/discuss-icon.svg?raw'),
        bg: "bg-accent-2",
        description: "We begin with a thorough consultation to understand your goals, challenges, and expectations—ensuring every step we take aligns with your vision and business objectives."
    },
    {
        icon: await import('../../../public/algorithm-icon.svg?raw'),
        bg: "bg-accent-3",
        description: "We craft customized solutions using the latest technologies—strategically designed to meet your unique needs and deliver measurable impact."
    },
    {
        icon: await import('../../../public/launch-icon.svg?raw'),
        bg: "bg-accent-1",
        description: "We bring your project to life with a seamless launch and provide continuous support and maintenance to ensure long-term success and scalability."
    }
];
---

<section class="full-bleed bg-white text-dark" id="process-section">
    <div class="container-wrapper mx-auto px-4 md:px-8 lg:px-[4.25rem] py-16">
        <h3 class="section-title text-4xl text-left w-full md:w-4/12 mb-12">
            This is our process
        </h3>
        
        <div class="flex flex-col lg:flex-row gap-8">
            {processSteps.map(step => (
                <div class={`flex-1 flex flex-col items-center p-6 rounded-lg transition-all duration-300 hover:shadow-lg ${step.bg}`}>
                    <div class="mb-4 text-white w-16 h-16">
                        <div set:html={step.icon.default}></div>
                    </div>
                    <p class="text-center text-base text-white">
                        {step.description}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .section-title {
        position: relative;
        margin-top: 16px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        top: -16px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: var(--accent-1);
    }
</style>
