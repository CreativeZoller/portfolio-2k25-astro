---
// todo: fix colors, use tailwind and variables, add full width for bg
import ContentCard from './../ContentCard.astro';
const recentBlogPosts = [
    {
        "title": "UX review presentations",
        "description": "How do you create compelling presentations that wow your colleagues and impress your managers?",
        "image": "https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=1280&q=80",
        "url": "/blog/ux-review-presentations",
        "tags": ["Design", "Research", "Presentation"],
        "author": "Olivia Rhye",
        "date": "2023-01-01",
        "contentType": "blog"
    },
    {
        "title": "Migrating to Linear 101",
        "description": "Linear helps streamline software projects, sprints, tasks, and bug tracking. Here’s how to get started...",
        "image": "https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=1280&q=80",
        "url": "/blog/migrating-to-linear-101",
        "tags": ["Design", "Research"],
        "author": "Phoenix Baker",
        "date": "2023-01-01",
        "contentType": "blog"
    },
    {
        "title": "Building your API Stack",
        "description": "The rise of RESTful APIs has been met by a rise in tools for creating, testing, and managing them.",
        "image": "https://images.unsplash.com/photo-1461749280684-dccba630e2f6?auto=format&fit=crop&w=1280&q=80",
        "url": "/blog/building-your-api-stack",
        "tags": ["Design", "Research"],
        "author": "Lana Steiner",
        "date": "2023-01-01",
        "contentType": "blog"
    },
    {
        "title": "Bill Walsh leadership lessons",
        "description": "Like to know the secrets of transforming a 2–14 team into a 3x Super Bowl winning Dynasty?",
        "image": "https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1280&q=80",
        "url": "/blog/bill-walsh-leadership-lessons",
        "tags": ["Leadership", "Management"],
        "author": "Alec Whitten",
        "date": "2023-01-01",
        "contentType": "blog"
    },
    {
        "title": "PM mental models",
        "description": "Mental models are simple expressions of complex processes or relationships.",
        "image": "https://images.unsplash.com/photo-1454023492550-5696f8ff10e1?auto=format&fit=crop&w=1280&q=80",
        "url": "/blog/pm-mental-models",
        "tags": ["Product", "Research", "Frameworks"],
        "author": "Demi Wilkinson",
        "date": "2023-01-01",
        "contentType": "blog"
    },
    {
        "title": "What is Wireframing?",
        "description": "Introduction to Wireframing and its Principles. Learn from the best in the industry.",
        "image": "https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=1280&q=80",
        "url": "/blog/what-is-wireframing",
        "tags": ["Design", "Research"],
        "author": "Candice Wu",
        "date": "2023-01-01",
        "contentType": "blog"
    }
];
const settings = {
    recentPosts: true
};
---

{settings.recentPosts && (
    <section
        class="relative container-wrapper py-12"
        id="blog-posts-section"
    >
        <div class="container">
            <div class="section-content space-y-12">
                <div class="flex flex-col md:gap-8">
                    <h3 class="section-title text-4xl text-left w-full md:w-4/12 mb-4 md:mb-0 order-first">
                        Recent blog posts
                    </h3>

                    <div class="grid grid-cols-1 gap-6 xl:grid-cols-12">
                        {/* First row: wide + subgrid of two smalls */}
                        <div class="xl:col-span-6 flex flex-col">
                            <ContentCard {...recentBlogPosts[0]} variant="wide" />
                        </div>
                        <div class="xl:col-span-6 flex flex-col">
                            <div class="flex flex-col gap-6 h-full xl:h-auto">
                                <ContentCard {...recentBlogPosts[1]} variant="small" />
                                <ContentCard {...recentBlogPosts[2]} variant="small" />
                            </div>
                        </div>
                        {/* Second row: three normals */}
                        <div class="xl:col-span-4">
                            <ContentCard {...recentBlogPosts[3]} variant="normal" />
                        </div>
                        <div class="xl:col-span-4">
                            <ContentCard {...recentBlogPosts[4]} variant="normal" />
                        </div>
                        <div class="xl:col-span-4">
                            <ContentCard {...recentBlogPosts[5]} variant="normal" />
                        </div>
                    </div>

                    <p class="section-text text-base flex justify-center mt-8">
                        <button
                            id="load-more"
                            class="bg-accent-3 text-white text-base py-5 px-2.5 rounded-xl border-none transition-all duration-300 hover:text-dark hover:shadow-lg"
                        >
                            View all posts
                        </button>
                    </p>
                </div>
            </div>
        </div>
    </section>
)}

<style>
    .section-title {
        position: relative;
        margin-top: 16px;
    }

    .section-title::after {
        content: '';
        position: absolute;
        top: -16px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: var(--accent-1);
    }
</style>
