---
import Layout from '../layouts/Homepage.astro';
import Navi from "../components/Navi.astro";
import Hero from "../components/sections/Hero.astro";

const pageData = {
    title: "Welcome to Astro",
    description: "A modern portfolio website built with Astro",
    author: "Your Name",
    keywords: ["astro", "portfolio", "web development"],
    image: "/images/hero.jpg",
    canonicalURL: "https://yoursite.com"
};

const heroData = {
    background: "/heroimage-contents.jpg"
};
// for proper searching under any content pages: https://dteather.com/blogs/astro-search-bar/
---
<Layout {...pageData}>
    <main class="container-wrapper">
        <Hero {...heroData} />

        <Navi />

        <RecentBlogPosts />

        <RecentPodcasts />

    </main>
</Layout>