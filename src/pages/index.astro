---
import Layout from '../layouts/Homepage.astro';
import Navi from "../components/Navi.astro";
import Hero from "../components/sections/Hero.astro";
import About from "../components/sections/About.astro";
import Solutions from "../components/sections/Solutions.astro";
import RecentProjects from '../components/sections/Recent-projects.astro';

const pageData = {
    title: "Welcome to Astro",
    description: "A modern portfolio website built with Astro",
    author: "Your Name",
    keywords: ["astro", "portfolio", "web development"],
    image: "/images/hero.jpg",
    canonicalURL: "https://yoursite.com"
};

const heroData = {
    background: "/heroimage.jpg",
    heading: "Tech & Trek",
    description: "At Tech & Trek, life is an adventure of coding and fatherhood. As a developer and a dad, I’m on a quest to build more than just software—I’m building a legacy. Follow my journey as I navigate through the intricacies of tech, the wonders of parenthood, and everything that lies beyond the screen."
};
---

<Layout {...pageData}>
    <main class="container-wrapper">
        <Hero {...heroData} />

        <Navi />

        <About />

        <Solutions />

        <RecentProjects />

        <section class="section-padding">
            Clients section
        </section>

        <section class="section-padding">
            Why choose us and process
        </section>

        <section class="section-padding">
            Recent contents section
        </section>

        <section class="section-padding">
            FAQ section
        </section>
    </main>
</Layout>
